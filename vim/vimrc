set nocompatible
let mapleader = ","

" NeoBundle.vim
" ==============================================================================
filetype off
if has('vim_starting')
	set runtimepath+=~/.vim/neobundle.vim.git/
endif

call neobundle#rc(expand('~/.vim/bundle/'))

NeoBundle 'Shougo/vimfiler'
